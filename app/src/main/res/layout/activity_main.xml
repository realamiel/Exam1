<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        style="@style/name"
        android:text="Jin Kazama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        style="@style/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jin" />

    <TextView
        android:id="@+id/textView3"
        style="@style/desc"
        android:text="Jin Kazama is the son of Jun Kazama and Kazuya Mishima. Jun's intimate relationship with Kazuya grew and she became pregnant with Jin."
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        style="@style/name"
        android:layout_marginTop="20dp"
        android:text="Geese Howard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        style="@style/desc"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Geese has short blond hair and blue eyes. His overall outfit is almost identical to Heihachi's primary outfit in Tekken 3 but his hakama is red."
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/imageView"
        style="@style/image"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/geese" />

    <TextView
        android:id="@+id/textView5"
        style="@style/name"
        android:layout_marginTop="20dp"
        android:text="King"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView2"
        style="@style/image"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="39dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/king" />

    <TextView
        android:id="@+id/textView6"
        style="@style/desc"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="King used to be a street brawling orphan with no care in the world except fighting. In one of his fights, King was grievously wounded and collapsed in front of a monastery."
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        style="@style/name"
        android:layout_marginTop="20dp"
        android:text="Noctis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/imageView3"
        style="@style/image"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/noctis" />

    <TextView
        android:id="@+id/textView8"
        style="@style/desc"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Noctis wears a black jacket with skull-motif buttons and sequenced details on the pockets. He keeps it unzipped, and the tag on the zipper also has a small skull."
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</android.support.constraint.ConstraintLayout>