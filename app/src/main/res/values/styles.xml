<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/redorange</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="name">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="desc">
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="image">
        <item name="android:layout_width">93dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:layout_marginStart">160dp</item>
        <item name="android:layout_marginLeft">160dp</item>
    </style>
</resources>
